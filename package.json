{
  "name": "slack-history-viewer",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "npm run dev:ssr",
    "dev:ssr": "nodemon --watch server.tsx --watch src/server --ext ts,tsx --exec vite-node server.tsx",
    "build:client": "vite build --outDir dist/client",
    "build:server-render": "vite build --ssr src/entry-server.tsx --outDir dist/server",
    "build:server-logic": "tsc --project tsconfig.node.json",
    "build": "yarn build:client && yarn build:server-render && yarn build:server-logic",
    "start": "NODE_ENV=production node dist/server/server.js",
    "lint": "yarn lint:prettier && yarn lint:eslint && yarn lint:tsc",
    "lint:prettier": "prettier --check \"src/**/*.{ts,tsx}\"",
    "lint:eslint": "eslint",
    "lint:tsc": "tsc --noEmit -p tsconfig.app.json -p tsconfig.node.json",
    "lint:fix": "prettier --write \"src/**/*.{ts,tsx}\" && eslint . --fix",
    "preview": "vite preview",
    "generate-emoji-map": "node --experimental-strip-types scripts/generate-emoji-map.ts"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.71.5",
    "@types/sqlite3": "^5.1.0",
    "compression": "1.8.1",
    "debounce-collect": "^1.0.2",
    "dotenv": "16.5.0",
    "emoji-datasource-google": "15.1.2",
    "express": "^5.1.0",
    "glob": "^11.0.1",
    "lodash-es": "4.17.21",
    "micro-memoize": "4.1.3",
    "p-debounce": "^4.0.0",
    "p-limit": "6.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "react-use-measure": "2.1.7",
    "react-virtualized-auto-sizer": "^1.0.26",
    "react-window": "1.8.11",
    "remark-gfm": "^4.0.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "typed-assert": "1.0.9",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/js": "latest",
    "@slack/web-api": "7.9.3",
    "@types/compression": "1.8.1",
    "@types/express": "^5.0.0",
    "@types/glob": "^8.1.0",
    "@types/lodash-es": "4.17.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-virtualized-auto-sizer": "^1.0.4",
    "@types/react-window": "^1.8.8",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "latest",
    "eslint-plugin-prettier": "latest",
    "eslint-plugin-react": "latest",
    "eslint-plugin-react-hooks": "latest",
    "eslint-plugin-react-refresh": "^0.4.7",
    "globals": "^16.0.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "tsx": "^4.19.3",
    "typescript": "~5.5.3",
    "typescript-eslint": "latest",
    "vite": "^6.3.1",
    "vite-node": "^3.1.1",
    "vite-plugin-static-copy": "2.3.1"
  },
  "packageManager": "yarn@4.9.2"
}
