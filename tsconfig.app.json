{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.cache/tsc/tsconfig.app.tsbuildinfo",
    "incremental": true,
    "composite": true,
    "target": "es2024",
    "useDefineForClassFields": true,
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "module": "es2022",
    "moduleResolution": "bundler",
    "skipLibCheck": true,

    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "@types", "scripts/emojis-raw.ts"],
  "exclude": ["src/server/*.ts", "src/entry-server.tsx"]
}
